<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="418dp"
        android:background="@drawable/img_login_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include layout="@layout/view_base_titlebar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="136dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/icon_radius_ffffff_15"
            android:orientation="vertical">

            <View
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher" />

            <com.thinksoft.banana.ui.view.InputView
                android:id="@+id/phoneInputView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="26dp" />

            <com.thinksoft.banana.ui.view.InputView
                android:id="@+id/codeInputView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="26dp" />

            <com.thinksoft.banana.ui.view.InputView
                android:id="@+id/passInputView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="26dp" />

            <TextView
                android:id="@+id/confirmButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="46dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/icon_radius_d76dbb_40"
                android:gravity="center"
                android:text="@string/确定修改"
                android:textColor="#FEFEFE"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>